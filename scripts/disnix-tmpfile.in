# Shows the usage of this command to the user

showUsage()
{
    me="$(basename "$0")"

    cat <<EOF
Usage: $me [--directory]

The command \`disnix-tmpfile' creates a temp file or directory that Disnix
clients (such as \`disnix-ssh-client') can use to store uploaded files in.

Options:
      --directory    Create a directory for storing temp files
  -h, --help         Shows the usage of this command
  -v, --version      Shows the version of this command
EOF
}

# Shows the version of this command to the user

showVersion()
{
    me="$(basename "$0")"

    cat <<EOF
$me (@PACKAGE_NAME@ @PACKAGE_VERSION@)

Copyright (C) 2008-2021 Sander van der Burg
EOF
}

# Parse valid argument options

PARAMS=`@getopt@ -n $0 -o hv -l directory,help,version -- "$@"`

if [ $? != 0 ]
then
    showUsage
    exit 1
fi

# Evaluate valid options

eval set -- "$PARAMS"

while [ "$1" != "--" ]
do
    case "$1" in
        --directory)
            createDirectory=1
            ;;
        -h|--help)
            showUsage
            exit 0
            ;;
        -v|--version)
            showVersion
            exit 0
            ;;
    esac

    shift
done

# Autoconf settings

export prefix=@prefix@

# Import checks

source @datadir@/@PACKAGE@/checks

# Validate the given options
checkTmpDir

# Execute operation

if [ "$createDirectory" = "1" ]
then
    mktemp -d -p "$TMPDIR"
else
    mktemp -p "$TMPDIR"
fi
